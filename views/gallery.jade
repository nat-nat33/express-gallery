extends ./layouts/main

block content
  if loggedIn
    include ./extentions/postNav
  else
    include ./extentions/loginNav
  ul(class="flex-container")
    each gallery in galleries
      li(class="flex-item")
        img(src='#{gallery.link}')
        p #{gallery.author}
        p #{gallery.link}
        p #{gallery.description}