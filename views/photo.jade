extends ./layouts/main

block title
  title
    |Photo

block content
  div.singlePhoto
    div(id="single-main")
      ul.single-list
        li.single-item
          h3 #{photo.author}
          img(class="single-image" id="#{photo.id}" src="#{photo.link}")
          p.singleInfo #{photo.link}
          p.singleInfo #{photo.description}
      button.big EDIT

    div(id="sideDivMain")
      ul.side-container
        each photo in photos
          li.sideStuff
            a(class="sideImage" href="/gallery/#{photo.id}")
             img(class="gallery-images" src="#{photo.link}")
            p #{photo.author}

